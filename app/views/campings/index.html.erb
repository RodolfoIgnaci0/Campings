<div class="uk-text-center">
  <h3>Some Shit</h3>
    <%= form_with url: campings_index_path, local: true, class: 'uk-search uk-search-default uk-width-1-3', method: :get do |f| %>
      <%= f.text_field :search, class:"uk-search-input" %>
      <%= f.submit "Search", name: nil, class:"uk-button uk-button-secondary" %>
    <% end %>
</div>

<hr>
<span> Campings encontrados por palabra clave: <%= @searching %></span>

<% @campgrounds.each do |value| %>
