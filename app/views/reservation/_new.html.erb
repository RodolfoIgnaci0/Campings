<%= form_with url: user_campground_reservations_path(current_user.id, @campground.id) do |f| %>
  <div class="uk-text-center">
    <legend class="uk-legend">Fecha de Reserva</legend>
    <div class="uk-margin">
      <%= f.label :Desde %>
      <%= f.date_select :initialDay, { :order => [:day, :month, :year], :prompt => { :day => 'Select day', :month => 'Select month', :year => 'Select year' } } %>
      <%= f.label :Hasta %>
      <%= f.date_select :finalDay , { :order => [:day, :month, :year], :prompt => { :day => 'Select day', :month => 'Select month', :year => 'Select year' } } %>
    </div>
    <%= f.submit class: "uk-button uk-button-secondary uk-button-small" %>
  </div>
<% end %>
