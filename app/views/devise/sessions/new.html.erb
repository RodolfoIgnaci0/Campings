<div class="uk-container">
  <h2>Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :email, class:"uk-legend" %><br />
      <%= f.email_field :email, autofocus: true, class:"uk-input" %>
    </div>

    <div class="field">
      <%= f.label :password, class:"uk-legend" %><br />
      <%= f.password_field :password, autocomplete: "off", class:"uk-input" %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="field">
        <%= f.check_box :remember_me, class:"uk-checkbox" %>
        <%= f.label :remember_me %>
      </div>
    <% end -%>

    <div class="actions">
      <%= f.submit "Log in", class:"uk-button uk-button-secondary" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
