<div class="uk-container">
  <h2>Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="field">
      <%= f.label :name, class:"uk-legend" %><br />
      <%= f.text_field :name, autofocus: true, class:"uk-input" %>
    </div>

    <div class="field">
      <%= f.label :last_name, class:"uk-legend" %><br />
      <%= f.text_field :last_name, class:"uk-input" %>
    </div>

    <div class="field">
      <%= f.label :phone, class:"uk-legend" %><br />
      <%= f.text_field :phone, class:"uk-input" %>
    </div>

    <div class="field">
      <%= f.label :email, class:"uk-legend" %><br />
      <%= f.email_field :email, class:"uk-input" %>
    </div>

    <div class="field">
      <%= f.label :password, class:"uk-legend" %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "off", class:"uk-input" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, class:"uk-legend" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off", class:"uk-input" %>
    </div>

    <div class="actions">
      <%= f.submit "Sign up", class:"uk-button uk-button-secondary" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
